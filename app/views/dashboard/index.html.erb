<h1>Dashboard</h1>
<h2>Recent Products</h2>

<% if @products.present? %>
  <table>
    <thead>
      <tr>
        <th>Product ID</th>
        <th>Title</th>
        <th>Price</th>
        <th>Inventory</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.title %></td>
          <td><%= product.variants.first.price %></td>
          <td><%= product.variants.first.inventory_quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No products found.</p>
<% end %>
