<div class="container-fluid">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Orders</h1>
    <div class="btn-group">
      <button class="btn btn-outline-secondary">
        <i class="bi bi-download"></i> Export
      </button>
      <button class="btn btn-outline-secondary">
        <i class="bi bi-filter"></i> Filter
      </button>
    </div>
  </div>

  <!-- Tabs -->
  <ul class="nav nav-tabs mb-4">
    <li class="nav-item">
      <%= link_to 'All Orders', orders_path(tab: 'all'), 
          class: "nav-link #{@tab == 'all' ? 'active' : ''}" %>
    </li>
    <li class="nav-item">
      <%= link_to 'eBay Orders', orders_path(tab: 'ebay'), 
          class: "nav-link #{@tab == 'ebay' ? 'active' : ''}" %>
    </li>
    <li class="nav-item">
      <%= link_to 'Shopify Orders', orders_path(tab: 'shopify'), 
          class: "nav-link #{@tab == 'shopify' ? 'active' : ''}" %>
    </li>
  </ul>

  <!-- Orders Table -->
  <div class="card">
    <div class="card-body p-0">
      <table class="table table-hover mb-0">
        <thead class="bg-light">
          <tr>
            <th scope="col" class="ps-4">Order #</th>
            <th scope="col">Date</th>
            <th scope="col">Customer</th>
            <th scope="col">Status</th>
            <th scope="col">Platform</th>
            <th scope="col" class="text-end">Total</th>
            <th scope="col" class="text-end pe-4">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @orders.any? %>
            <% @orders.each do |order| %>
              <tr>
                <td class="ps-4">#12345</td>
                <td>Jan 10, 2024</td>
                <td>John Doe</td>
                <td>
                  <span class="badge bg-success">Paid</span>
                </td>
                <td>
                  <% if order.platform == 'ebay' %>
                    <i class="bi bi-bag text-warning"></i>
                  <% else %>
                    <i class="bi bi-shop text-primary"></i>
                  <% end %>
                  <%= order.platform&.capitalize %>
                </td>
                <td class="text-end">$99.99</td>
                <td class="text-end pe-4">
                  <div class="btn-group">
                    <button class="btn btn-sm btn-outline-secondary">
                      <i class="bi bi-eye"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-secondary">
                      <i class="bi bi-printer"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="7" class="text-center py-4 text-muted">
                <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                No orders found
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-between align-items-center mt-4">
    <div class="text-muted small">
      Showing <strong>0</strong> of <strong>0</strong> orders
    </div>
    <nav aria-label="Page navigation">
      <ul class="pagination mb-0">
        <li class="page-item disabled">
          <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        <li class="page-item active">
          <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item disabled">
          <a class="page-link" href="#">Next</a>
        </li>
      </ul>
    </nav>
  </div>
</div>

<% content_for :head do %>
  <style>
    .table > :not(caption) > * > * {
      padding: 1rem 0.5rem;
    }
    .badge {
      padding: 0.5em 0.8em;
    }
  </style>
<% end %>