<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Orders</h1>
    
    <div class="btn-group">
      <%= link_to "All", orders_path(tab: 'all'), 
          class: "btn #{@tab == 'all' ? 'btn-primary' : 'btn-outline-secondary'}" %>
      <%= link_to "Pending", orders_path(tab: 'pending'), 
          class: "btn #{@tab == 'pending' ? 'btn-primary' : 'btn-outline-secondary'}" %>
      <%= link_to "Paid", orders_path(tab: 'paid'), 
          class: "btn #{@tab == 'paid' ? 'btn-primary' : 'btn-outline-secondary'}" %>
      <%= link_to "Shipped", orders_path(tab: 'shipped'), 
          class: "btn #{@tab == 'shipped' ? 'btn-primary' : 'btn-outline-secondary'}" %>
      <%= link_to "Completed", orders_path(tab: 'completed'), 
          class: "btn #{@tab == 'completed' ? 'btn-primary' : 'btn-outline-secondary'}" %>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Platform</th>
              <th>Order ID</th>
              <th>Date</th>
              <th>Customer</th>
              <th>Items</th>
              <th>Total (Pre-Tax)</th>  
              <th>Payment Status</th>
              <th>Tracking</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @orders.any? %>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.platform %></td>
                  <td><%= order.platform_order_id %></td>
                  <td><%= order.order_placed_at.in_time_zone('Eastern Time (US & Canada)').strftime("%b %d, %Y %I:%M %p") %></td>
                  <td><%= order.customer_name %></td>
                  <td><%= order.order_items.count %> items</td>
                  <td><%= number_to_currency(order.total_price) %></td>
                  <td>
                    <span class="badge <%= payment_status_color_class(order.payment_status) %>">
                      <%= order.payment_status&.titleize || 'Unknown' %>
                    </span>
                  </td>
                  <td>
                    <% if order.tracking_number.present? %>
                      <%= order.tracking_number %>
                    <% else %>
                      <span class="badge bg-danger">Not Shipped</span>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "View", 'https://www.ebay.com/sh/ord/?filter=status:AWAITING_SHIPMENT', class: "btn btn-sm btn-outline-primary" %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="8" class="text-center">No orders found</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>